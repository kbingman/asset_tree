%h1= t('remove_folder')

%p 
  = t('text.folders.remove_warning')

%table.index#snippets{:cellpadding=>0, :cellspacing=>0, :border=>0}
  %tbody
    %tr.node.level_1
      %td.folder
        = image('snippet', :alt => "snippet-icon")
        %span.title= @folder.name

- form_for [:admin, @folder], :html => {:method => :delete, :onsubmit_status => "#{t('removing_folder')}&#8230;"} do
  %p.buttons
    %input.button{:type=>"submit", :value => t('delete_folder')}/
    = t('or')
    = link_to t('cancel'), admin_folders_url